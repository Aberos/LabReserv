
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="@Url.Content("~/Content/Bootstrap.css")" rel="stylesheet" type="text/css" />
    <style type="text/css">
        body{
            background: #222;
        }
    </style>
</head>
<body>
    <div class="container" > 
        <div class="col-md-offset-4 col-md-4" style="margin-top: 20%; background: rgba(255,255,255,1); padding: 20px; border-radius: 20px;">
            <form action="/Admin/Login" method="post" >
                <h1 style="text-align:center">LAB RESERVE</h1>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" type="email" class="form-control" name="Email"></input>
                </div>

                <div class="form-group">
                    <label for="password">Password</label>
                    <input id="password" type="password" class="form-control" name="Senha"></input>
                </div>

                @if (TempData["login"] != null)
                {
    
                        <div class="alert alert-success">
                            <p class="text-center">@TempData["login"]</p>
                        </div>
                }

                <button class="btn btn-success" type="submit" style="width: 100%">Logar</button>
                <a href="/Professor/Login" class="btn btn-primary" style="width: 100%; margin-top: 5px">Professor</a>
                
            </form>
        </div>
    </div>
</body>
</html>
