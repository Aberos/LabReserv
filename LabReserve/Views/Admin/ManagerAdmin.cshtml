
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Manager Admin";

}


<h1>Admins</h1>

<button class="btn btn-default" style="position: absolute; margin-top: -3%; right: 10px;" data-toggle="modal" data-target="#AddAdmin"><i class="fa fa-plus" aria-hidden="true"></i> Admins</button>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Cel</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in ViewBag.ListaAdmin)
            {
                <tr>
                    <td>@p.Nome</td>
                    <td>@p.Sobrenome</td>
                    <td>@p.Celular</td>
                    <td>@p.Email</td>
                    <td>
                        <div>
                            <button class="btn btn-danger">
                                DELETE
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="modal fade" id="AddAdmin" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Add Admin</h4>
            </div>
            <form action="/Admin/Create" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label>Firstname</label>
                        <input type="text" class="form-control" name="Nome" />
                    </div>

                    <div class="form-group">
                        <label>Lastname</label>
                        <input type="text" class="form-control" name="Sobrenome" />
                    </div>

                    <div class="form-group">
                        <label>Cel</label>
                        <input type="tel" class="form-control" name="Cel" />
                    </div>

                    <div class="form-group">
                        <label>Email</label>
                        <input type="email" class="form-control" name="Email" />
                    </div>

                    <div class="form-group">
                        <label>Password</label>
                        <input type="password" class="form-control" name="Senha" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
