
@{
    ViewBag.Title = "Solicitar";
    Layout = "~/Views/Shared/_LayoutProfessor.cshtml";
}

<h2>minhas Solicitacoes</h2>
<button class="btn btn-default" style="position: absolute; margin-top: -3%; right: 10px;" data-toggle="modal" data-target="#AddSolicitacao"><i class="fa fa-plus" aria-hidden="true"></i> SOLICITAR</button>

<script>

    function getStatus(a) {
        var t;
        switch (a) {
            case 1:
                t = "Pendente";
                break;
            case 2:
                t = "Aceita";
                break;
            case 3:
                t = "Recusada";
                break;
            default:
                t = "Pendente";
                break;
        }

        return t;
    }

    function getDia(a) {
        var dia;
        switch (a) {
            case 1:
                dia = "Domingo";
                break;
            case 2:
                dia = "Segunda-Feira";
                break;
            case 3:
                dia = "Terça-Feira";
                break;
            case 4:
                dia = "Quarta-Feira";
                break;
            case 5:
                dia = "Quinta-Feira";
                break;
            case 6:
                dia = "Sexta-Feira";
                break;
            case 7:
                dia = "Sabado";
                break;
            default:
                dia = "Erro"
                break;
        }
        return dia;
    }


    function getTurno(b) {
        var turno;

        switch (b) {
            case 1:
                turno = "Manha";
                break;
            case 2:
                turno = "Tarde";
                break;
            case 3:
                turno = "Noite";
                break;
        }

        return turno;
    }

</script>

<hr />
<div class="row">

    @foreach (var p in ViewBag.Solictacoes)
    {

        <div class="panel panel-default">
            <div class="panel-heading">Solicitação de Reserva : @p.nomeProfessor @p.sobrenomeProfessor [Status: <script>document.write(getStatus(@p.Status));</script> ]</div>
            <div class="panel-body">
                Solicitação de reserva do professor @p.nomeProfessor @p.sobrenomeProfessor para o @p.nomeTurma @p.nomeCurso no @p.nomeSala.
                No <script>document.write(getDia(@p.Dia));</script> <script>document.write(getTurno(@p.Turno ));</script>  @p.Bloco ºBloco.
            </div>
            <div class="panel-footer"><a class="btn btn-danger" href="/Professor/CancelarSolicitacao?id=@p.idSolicitacao">Cancelar</a></div>
        </div>
    }
</div>

<div class="modal fade" id="AddSolicitacao" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Solicitar Reserva</h4>
            </div>
            <form action="/Professor/Solicitar" method="post">
                <div class="modal-body">
                    <div class="form-group">
                        <label>DIA DA SEMANA</label>
                        <select class="form-control" name="dia">
                            <option value="1">Domingo</option>
                            <option value="2">Segunda-Feira</option>
                            <option value="3">Terça-Feira</option>
                            <option value="4">Quarta-Feira</option>
                            <option value="5">Quinta-Feira</option>
                            <option value="6">Sexta-Feira</option>
                            <option value="7">Sabado</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Turno</label>
                        <select class="form-control" name="turno">
                            <option value="1">Manha</option>
                            <option value="2">Tarde</option>
                            <option value="3">Noite</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Bloco</label>
                        <select class="form-control" name="bloco">
                            <option value="1">1ºBloco</option>
                            <option value="2">2ºBloco</option>
                            <option value="3">3ºBloco</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label>Sala</label>
                        <select class="form-control" name="sala">
                            @foreach (var p in ViewBag.Salas)
                            {
                                <option value="@p.Id">@p.Nome</option>
                            }

                        </select>
                    </div>

                    <div class="form-group">
                        <label>Turma</label>
                        <select class="form-control" name="turma">
                            @foreach (var p in ViewBag.Turmas)
                            {
                                <option value="@p.idTurma">@p.nomeTurma @p.nomeCurso</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
