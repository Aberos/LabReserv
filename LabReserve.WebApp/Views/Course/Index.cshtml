@{
    ViewBag.Title = "Courses";
    Layout = "_Layout";
}

@section Scripts {
    <script type="text/javascript">
        $(function () {
            let tableCourses = window.tables.init('course-table', [
                { data: 'name', title: 'Name', width: '70%' },
            ], '/course/list');

            window.forms.setupEntityTable(tableCourses, 'course');
        });
    </script>
}

<div class="container-fluid">
    <h1>Courses</h1>
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table id="course-table">
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="course-form-modal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
    aria-labelledby="course-form-modal-label" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="course-form-modal-label">Course</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="course-form">
                    <div class="row">
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="text" class="form-control" id="name" name="name" placeholder="Name"
                                    required>
                                <label for="name">Name</label>
                            </div>
                        </div>
                    </div>
                    <input type="hidden" name="id" id="id" />
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="btnSubmitForm">Save</button>
            </div>
        </div>
    </div>
</div>
